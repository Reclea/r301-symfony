{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!
{% endblock %}

{% block body %}
	<div id="layoutSidenav_content">
		<main>
			<div class="container-fluid px-4">
				<h1 class="mt-4">Static Navigation</h1>
				<ol class="breadcrumb mb-4">
					<li class="breadcrumb-item">
						<a href="index.html">Dashboard</a>
					</li>
					<li class="breadcrumb-item active">Static Navigation</li>
				</ol>
				<div class="row">
					{% for article in articles %}
						<div class="col-md-4 mb-4">
							<div class="card">
								<div class="card-body">
									<h5 class="card-title">{{ article.titre }}
										{{ article.id}}</h5>
									<p class="card-text">{{ article.texte }}</p>
								</div>
								<div class="card-footer text-muted">
									Créé le
									{{ article.date|date('d/m/Y H:i') }}
								</div>
								<a href="localhost/article/delete/{{article.id}}" class="btn btn-danger">Supprimer</a>
						</div>
					</div>
				{% else %}
					<p>Aucun article disponible.</p>
				{% endfor %}
			</div>
		</div>
	</main>
</div></div>{% endblock %}
